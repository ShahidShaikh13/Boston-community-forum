<div class="mb-6">
  <div class="flex items-center gap-4 mb-4">
    <%= link_to post_path(@post), class: "btn btn-secondary btn-sm" do %>
      <i class="fas fa-arrow-left"></i>
      Back to Post
    <% end %>
    <h1>Edit Post</h1>
  </div>
</div>

<div class="card">
  <h2 class="card-title mb-6">Edit Your Post</h2>
  
  <%= form_with model: @post, local: true do |f| %>
    <% if @post.errors.any? %>
      <div class="flash flash-alert mb-6">
        <h3><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, 
          placeholder: "Enter your post title...",
          class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :category_id, "Category", class: "form-label" %>
      <%= f.collection_select :category_id, 
          @categories, 
          :id, 
          :name, 
          { prompt: "Select a category..." },
          { class: "form-select" } %>
    </div>
    
    <div class="form-group">
      <%= f.label :content, class: "form-label" %>
      <%= f.text_area :content, 
          placeholder: "Write your post content here...",
          class: "form-control",
          rows: 10 %>
      <small class="text-muted">Minimum 10 characters required.</small>
    </div>
    
    <div class="flex gap-4">
      <%= f.submit "Update Post", class: "btn btn-primary" %>
      <%= link_to "Cancel", post_path(@post), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
