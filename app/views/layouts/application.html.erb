<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Boston Campus Forum" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= 'dark-theme' if cookies[:theme] == 'dark' %>">
    <!-- Navigation -->
    <nav class="navbar">
      <div class="nav-container">
        <div class="nav-brand">
          <%= link_to root_path, class: "brand-link" do %>
            <i class="fas fa-graduation-cap"></i>
            <span>Boston Campus Forum</span>
          <% end %>
        </div>

        <div class="nav-menu">
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Posts", posts_path, class: "nav-link" %>
          <%= link_to "Categories", categories_path, class: "nav-link" %>
          
          <% if user_signed_in? %>
            <%= link_to "New Post", new_post_path, class: "nav-link btn-primary" %>
            <div class="nav-dropdown">
              <button class="nav-link dropdown-toggle">
                <i class="fas fa-user"></i>
                <%= current_user.display_name %>
              </button>
              <div class="dropdown-menu">
                <%= link_to "Profile", profile_path, class: "dropdown-item" %>
                <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </div>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "nav-link" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link btn-primary" %>
          <% end %>
          
          <button class="theme-toggle" onclick="toggleTheme()">
            <i class="fas fa-moon"></i>
          </button>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="flash flash-notice">
        <i class="fas fa-info-circle"></i>
        <%= notice %>
        <button class="flash-close" onclick="this.parentElement.remove()">
          <i class="fas fa-times"></i>
        </button>
      </div>
    <% end %>

    <% if alert %>
      <div class="flash flash-alert">
        <i class="fas fa-exclamation-triangle"></i>
        <%= alert %>
        <button class="flash-close" onclick="this.parentElement.remove()">
          <i class="fas fa-times"></i>
        </button>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="main-content">
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer-container">
        <p>&copy; 2024 Boston Campus Forum. Built with Rails & SCSS.</p>
      </div>
    </footer>

    <script>
      function toggleTheme() {
        const body = document.body;
        const theme = body.classList.contains('dark-theme') ? 'light' : 'dark';
        body.classList.toggle('dark-theme');
        document.cookie = `theme=${theme};path=/;max-age=31536000`;
      }
    </script>
  </body>
</html>
